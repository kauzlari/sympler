<Simulation
   simName = "sim"
   inputFromResults = "yes"
>
  <Square
     name = "square"
     cutoff = "1"
     />
  <Controller
     dt = "0.01"
     timesteps = "5000"
     statusEvery = "30000"
     >
    <IntegratorVelocityVerletDisp
       species = "fluid"
       displacement = "d"       
       symbol = "d"       
       >
    </IntegratorVelocityVerletDisp>
  </Controller>

  <FDPD
     weightingFunction="square"
     species1="fluid"
     species2="fluid"
     temperature = "1"
     dissipation = "20"
  />
  <Phase>
    <VerletCreator
      displacement = "d"
      skinSize = "0.2"
      every = "0"
    />
    <BoundaryCuboid
	boxX = "1"
	boxY = "1"
	boxZ = "1"
	periodicX="yes"
	periodicY="yes"
	periodicZ="yes"
       >
      <ReflectorStochastic
         />
      <ParticleCreatorLattice
 	species = "fluid"
	density = "3"
	nLatticePX="10"
	nLatticePY="10"
	nLatticePZ="10"
	temperature = "1"
      />
    </BoundaryCuboid>
  </Phase>
