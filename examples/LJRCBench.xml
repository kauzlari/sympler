     >
    <IntegratorVelocityVerletDisp
       species = "fluid"
       displacement = "d"
       symbol = "d"
       >
    </IntegratorVelocityVerletDisp>
  </Controller>

  <FPairVels
     forceName = "LJ"
     species1="fluid"
     species2="fluid"
     pairFactor = "((48/(rij^6)-24)/(rij^8))*[rij]"
     cutoff = "2.5" 
  />
<!--     weightingFunction="dummy" -->

  <Phase>
<!--    <LinkedListCreator/> -->
    <VerletCreator
      skinSize = "0.3"
      displacement = "d"
    />
    <BoundaryCuboid
	boxX = "1"
	boxY = "1"
	boxZ = "1"
	periodicX="yes"
	periodicY="yes"
	periodicZ="yes"
       >
      <ReflectorStochastic
         />
      <ParticleCreatorLattice
 	species = "fluid"
	density = "0.8442"
	nLatticePX="10"
	nLatticePY="10"
	nLatticePZ="10"
	kBToverM = "1"
      />
    </BoundaryCuboid>
  </Phase>
